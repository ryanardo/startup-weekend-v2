{{#partial "content"}}
    {{#if updateEvent}}
        <form actions="/events/{{updateEvent.idEvent}}/update" method="post">

            <label for="eventTitle">Title of the Event :</label>
            <input id="eventTitle" name="eventTitle" type="text" value="{{updateEvent.eventTitle}}">
            <br>
            <label for="eventDescription">Description of the Event:</label>
            <input id="eventDescription" name="eventDescription" type="text" value="{{updateEvent.eventDescription}}">
            <br>
            <button type="submit" class="btn btn-default">CREATE EVENT</button>

        </form>


    {{else}}
        <form actions="/events/create" method="post">

            <label for="eventTitle">Title of the Event :</label>
            <input id="eventTitle" name="eventTitle" type="text" value="">
            <br>
            <label for="eventDescription">Description of the Event:</label>
            <input id="eventDescription" name="eventDescription" type="text" value="">
            <br>
            <button type="submit" class="btn btn-default">CREATE EVENT</button>

        </form>

    {{/if}}


{{/partial}}
{{> layout.hbs}}